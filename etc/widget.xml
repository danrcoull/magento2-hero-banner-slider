<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget class="BoxLeaf\BannerSlider\Block\Widget\HeroBanner" id="boxleaf_bannerslider_herobanner">
		<label>Hero Banner</label>
		<description>heroBanner</description>
		<parameters>
			<parameter name="banner_id" sort_order="10" source_model="BoxLeaf\BannerSlider\Model\Config\Source\Banners" visible="true" xsi:type="select">
				<label>Banner Id</label>
			</parameter>
			<parameter name="full_width" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Full Width</label>
			</parameter>
			<parameter name="is_parallax" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Parallax</label>
			</parameter>

			<parameter name="full_height" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Full Page Height</label>
			</parameter>
		</parameters>
	</widget>
	<widget class="BoxLeaf\BannerSlider\Block\Widget\BannerSlider" id="boxleaf_bannerslider_bannerslider">
		<label>Banner Slider</label>
		<description>bannerSlider</description>
		<parameters>
			<parameter name="slider_id" sort_order="10" source_model="BoxLeaf\BannerSlider\Model\Config\Source\BannerSlider" visible="true" xsi:type="select">
				<label>Slider Id</label>
			</parameter>
			<parameter name="full_width" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Full Width</label>
			</parameter>
			<parameter name="full_height" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Full Page Height</label>
			</parameter>
			<parameter name="show_tabs" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Show Tabs under banner</label>
			</parameter>
			<parameter name="is_parallax" sort_order="10" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" xsi:type="select">
				<label>Parallax</label>
			</parameter>
		</parameters>
	</widget>
</widgets>
